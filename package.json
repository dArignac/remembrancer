{
  "name": "remembrancer",
  "private": true,
  "version": "1.5.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "tauri": "tauri"
  },
  "devDependencies": {
    "@actions/github": "^5.0.1",
    "@google/semantic-release-replace-plugin": "^1.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "@tauri-apps/cli": "^1.0.5",
    "@tsconfig/svelte": "^3.0.0",
    "globby": "^13.1.1",
    "semantic-release": "^19.0.3",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.7"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.0.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "src-tauri/Cargo.toml"
              ],
              "from": "^version = \".*\"",
              "to": "version = \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "src-tauri/Cargo.toml",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "src-tauri/tauri.conf.json"
              ],
              "from": "    \"version\": \".*\"",
              "to": "    \"version\": \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "src-tauri/tauri.conf.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "package.json"
              ],
              "from": "  \"version\": \".*\",",
              "to": "  \"version\": \"${nextRelease.version}\",",
              "results": [
                {
                  "file": "package.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "src/lib/Version.svelte"
              ],
              "from": "Version: <span>.*</span>",
              "to": "Version: <span>${nextRelease.version}</span>",
              "results": [
                {
                  "file": "src/lib/Version.svelte",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "updater.json"
              ],
              "from": "\"version\": \"v.*\",",
              "to": "\"version\": \"v${nextRelease.version}\",",
              "results": [
                {
                  "file": "updater.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "updater.json"
              ],
              "from": "\"pub_date\": \".*\",",
              "to": "\"pub_date\": \"\",",
              "results": [
                {
                  "file": "updater.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "updater.json"
              ],
              "from": "download/v.*/remembrancer",
              "to": "download/v${nextRelease.version}/remembrancer",
              "results": [
                {
                  "file": "updater.json",
                  "hasChanged": true,
                  "numMatches": 2,
                  "numReplacements": 2
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "updater.json"
              ],
              "from": "remembrancer_.*_amd64",
              "to": "remembrancer_${nextRelease.version}_amd64",
              "results": [
                {
                  "file": "updater.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "src-tauri/Cargo.toml",
            "src-tauri/tauri.conf.json",
            "package.json",
            "src/lib/Version.svelte",
            "updater.json"
          ],
          "message": "chore(release): ${nextRelease.version}[skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "volta": {
    "node": "16.17.0"
  }
}
